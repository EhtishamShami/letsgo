<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.shami.daniyalproject.activities.mainactivity.MainActivityViewModel"/>

        <variable
            name="listeners"
            type="com.shami.daniyalproject.clickListeners.StatusClickListeners"/>

    </data>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:padding="@dimen/padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/infoBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/placeholderdetails"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/studentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@id/infoBG"
        app:layout_constraintEnd_toEndOf="@id/infoBG"
        app:layout_constraintTop_toTopOf="@id/infoBG"
        app:layout_constraintBottom_toTopOf="@id/studentNumberTV"
        app:layout_constraintVertical_chainStyle="packed"
        />


    <TextView
        android:id="@+id/studentNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Number"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/itemMargin"
        app:layout_constraintStart_toStartOf="@id/infoBG"
        app:layout_constraintEnd_toEndOf="@id/infoBG"
        app:layout_constraintTop_toBottomOf="@id/studentNumber"
        app:layout_constraintBottom_toBottomOf="@id/infoBG"
        />



    <TextView
        android:id="@+id/infoBGSecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemMargin"
        android:background="@drawable/placeholderdetails"
        android:text="View List of Student"
        android:gravity="center"
        android:textSize="26sp"
        android:padding="32dp"
        android:onClick="@{listeners::viewStudentList}"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/infoBG"
        app:layout_constraintStart_toStartOf="@id/infoBG"
        app:layout_constraintEnd_toEndOf="@id/infoBG"
        />






</android.support.constraint.ConstraintLayout>
</layout>